<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context="com.example.writter.MainActivity">


    <EditText
        android:id="@+id/editTextFlowerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Введіть назву квітки"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextFlowerName"
        android:layout_marginTop="12dp"
        android:text="Пошук" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSearch"
        android:layout_marginTop="26dp" />

    <Button
        android:id="@+id/buttonShowList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewResult"
        android:layout_marginTop="17dp"
        android:onClick="showFlowerList"
        android:text="Список квітів" />


    <Button
        android:id="@+id/buttonExit"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonShowList"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="414dp"
        android:layout_marginRight="11dp"
        android:text="Вихід" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFlowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewResult"
        android:layout_marginTop="90dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/flowerbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="125dp"
        android:text="Розробник" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="240dp"
        android:layout_height="395dp"
        android:layout_below="@+id/buttonShowList"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="8dp">

    </FrameLayout>

    <Button
        android:id="@+id/starsrbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="68dp"
        android:text="оцінка" />


</RelativeLayout>